{
  "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
  "vcs": {
    "enabled": false,
    "clientKind": "git",
    "useIgnoreFile": false
  },
  "files": {
    "ignoreUnknown": false,
    "includes": [
      "**",
      "!**/.venv/**",
      "!node_modules/**",
      "!dist/**",
      "!coverage/**",
      "!**/*.min.js",
      "!pnpm-lock.yaml"
    ]
  },
  "formatter": { "enabled": true, "indentStyle": "space", "indentWidth": 2 },
  "linter": {
    "enabled": false
  },
  "javascript": { "formatter": { "quoteStyle": "double" } },
  "assist": {
    "enabled": false
  }
}
