{
  "name": "@mizchi/lsmcp",
  "version": "0.2.1",
  "type": "module",
  "license": "MIT",
  "exports": {
    ".": "./dist/lsmcp.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "prepublishOnly": "pnpm build",
    "build": "tsdown",
    "test": "vitest --run",
    "typecheck": "tsgo -p . --noEmit",
    "typecheck:tsc": "tsc -p . --noEmit",
    "lint": "oxlint . --ignore-pattern='tests/fixtures/**' --ignore-pattern='**/*.expected.ts' --ignore-pattern='**/*.input.ts' --ignore-pattern='playground/**' --ignore-pattern='examples/**'",
    "lint:refactor": "oxlint . --deny-warnings --ignore-pattern='tests/fixtures/**' --ignore-pattern='**/*.expected.ts' --ignore-pattern='**/*.input.ts' --ignore-pattern='playground/**' --ignore-pattern='examples/**'",
    "deadcode": "tsr 'src/mcp/unified-mcp\\.ts$' 'src/mcp/typescript-mcp\\.ts$'",
    "deadcode:with-tests": "tsr 'src/mcp/unified-mcp\\.ts$' 'src/mcp/typescript-mcp\\.ts$' 'src/.*\\.test\\.ts$' 'tests/.*\\.ts$'",
    "run:mcp": "pnpm build && node dist/lsmcp.js"
  },
  "bin": {
    "typescript-mcp": "./dist/typescript-mcp.js",
    "lsmcp": "./dist/lsmcp.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "neverthrow": "^8.2.0",
    "ts-morph": "^26.0.0",
    "zod": "^3.25.56"
  },
  "devDependencies": {
    "@types/node": "^22.15.30",
    "@typescript/native-preview": "7.0.0-dev.20250610.1",
    "@vitest/coverage-v8": "^3.2.4",
    "ai": "^4.3.16",
    "oxlint": "^1.1.0",
    "tsdown": "^0.12.7",
    "tsr": "^1.3.4",
    "typescript": "^5.7.3",
    "typescript-language-server": "^4.3.4",
    "vitest": "^3.2.2",
    "vscode-languageserver-protocol": "^3.17.5",
    "vscode-languageserver-types": "^3.17.5"
  },
  "peerDependencies": {
    "typescript": "*"
  },
  "packageManager": "pnpm@9.15.0"
}
