{
  "name": "@mizchi/lsmcp",
  "version": "0.5.1",
  "type": "module",
  "license": "MIT",
  "exports": {
    ".": "./dist/lsmcp.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "prepublishOnly": "pnpm build",
    "build": "tsdown",
    "watch": "tsdown --watch",
    "typecheck": "tsgo check",
    "typecheck:tsc": "tsc --noEmit -p tsconfig.json",
    "lint": "oxlint --quiet",
    "lint:refactor": "oxlint",
    "test": "vitest --run",
    "test:lsp": "LSP_COMMAND=\"typescript-language-server --stdio\" vitest --run tests/lsp*.test.ts tests/lsmcp-*.test.ts",
    "test:ts": "vitest --run src/ts",
    "test:mcp": "vitest --run tests/mcp-*.test.ts",
    "test:all": "pnpm test:ts && pnpm test:lsp && pnpm test:mcp",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "bin": {
    "typescript-mcp": "./dist/typescript-mcp.js",
    "lsmcp": "./dist/lsmcp.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@types/micromatch": "^4.0.9",
    "glob": "^11.0.3",
    "micromatch": "^4.0.8",
    "neverthrow": "^8.2.0",
    "ts-blank-space": "^0.6.1",
    "ts-morph": "^26.0.0",
    "zod": "^3.25.56"
  },
  "devDependencies": {
    "@types/node": "^22.15.30",
    "@types/ws": "^8.18.1",
    "@typescript/native-preview": "7.0.0-dev.20250610.1",
    "@vitest/coverage-v8": "^3.2.4",
    "ai": "^4.3.16",
    "husky": "^9.1.7",
    "jscpd": "^4.0.5",
    "lint-staged": "^16.1.2",
    "oxlint": "^1.1.0",
    "tsdown": "^0.12.7",
    "tsr": "^1.3.4",
    "typescript": "^5.7.3",
    "typescript-language-server": "^4.3.4",
    "vitest": "^3.2.2",
    "vscode-languageserver-protocol": "^3.17.5",
    "vscode-languageserver-types": "^3.17.5",
    "ws": "^8.18.2"
  },
  "peerDependencies": {
    "typescript": "*"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "oxlint --quiet",
      "deno fmt --check"
    ]
  },
  "packageManager": "pnpm@9.15.0"
}
