{
  "id": "my-custom-language",
  "name": "My Custom Language",
  "baseLanguage": "custom",
  "description": "Custom language server configuration",
  "extensions": [".mcl", ".myclang"],
  "lspCommand": "my-language-server",
  "lspArgs": ["--stdio"],
  "initializationOptions": {
    "enableFeatureX": true,
    "maxDiagnostics": 100
  },
  "diagnosticPatterns": [
    "**/*.mcl",
    "**/*.myclang",
    "!**/build/**"
  ]
}