{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "paths": {
      "@internal/code-indexer": ["./packages/code-indexer/src/index.ts"],
      "@internal/code-indexer/*": ["./packages/code-indexer/src/*"],
      "@internal/lsp-client": ["./packages/lsp-client/src/index.ts"],
      "@internal/lsp-client/*": ["./packages/lsp-client/src/*"],
      "@internal/types": ["./packages/types/src/index.ts"],
      "@internal/types/*": ["./packages/types/src/*"]
    },
    "lib": ["esnext", "dom"],
    "types": ["vitest/importMeta"],
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src/**/*", "tests/**/*", "packages/**/*"],
  "exclude": [
    "tests/fixtures/**/*",
    "tests/languages/fixtures/**/*",
    "tests/integration/tmp-lsp-errors-*/**/*"
  ]
}
